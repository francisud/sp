<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.fud.spnew.ProcessActivity"
    tools:showIn="@layout/activity_process">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/topPhoto"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />
        
        <TableLayout
            android:id="@+id/topTableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TableRow>
                <LinearLayout
                    android:id="@+id/topSpecies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:id="@+id/topPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>
            </TableRow>

        </TableLayout>

        <ImageView
            android:id="@+id/undersidePhoto"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <TableLayout
            android:id="@+id/undersideTableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TableLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
